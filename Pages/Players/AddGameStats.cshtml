@page
@model AddGameStats.Model

@{
    ViewData["Title"] = "Add Game Stats";
}

<h1>Create</h1>

<h4>GameStats</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div class="form-group">
                <label asp-for="GameStats.PlayerId" class="control-label"></label>
                <select asp-for="GameStats.PlayerId" asp-items="Model.PlayersDropDown" class="form-control">
                    <option value="">--Select Player--</option> 
                </select>
                <span asp-validation-for="GameStats.PlayerId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GameStats.Description" class="control-label"></label>
                <input asp-for="GameStats.Description" class="form-control" />
                <span asp-validation-for="GameStats.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Add GameStats" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}